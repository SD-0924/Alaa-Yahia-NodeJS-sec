<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Details</title>
    <link rel="stylesheet" href="/styles.css" type="text/css" />
    <script src="/scripts.js"></script>
  </head>
  <body>
    <main>
      <div class="content">
        <h1>Details of File: <%= filename %></h1>
        <p><%= fileContent %></p>
        <div style="display: flex">
          <form action="/download/<%= filename %>" method="post">
            <div style="display: flex">
              <button type="submit" value="Dowload File" style="margin: 10px">
                Download File
              </button>
              <button type="button" onclick="showForm()">Edit File</button>
            </div>
          </form>

          <form action="/delete/<%= filename %>" method="post">
            <button type="submit" style="background-color: brown">
              Delete File
            </button>
          </form>
        </div>
      </div>

      <div class="check"></div>

      <div class="content-form" style="display: none">
        <form
          action="/edit/<%= filename %>"
          method="post"
          onsubmit="return validateFilename('<%= JSON.stringify(filesList) %>','edit=true')"
        >
          <div>
            <p>file Name:</p>
            <input
              id="file-name-id"
              type="text"
              name="new-file-name"
              value="<%= filename %>"
              required
            />
            <p id="file-name-error" style="color: red"></p>
          </div>
          <div>
            <p><label for="file-content">Content:</label></p>
            <textarea id="file-content" name="file-content">
<%=fileContent%>
            </textarea>
          </div>
          <input type="submit" value="Submit" />
        </form>
      </div>
    </main>
  </body>
</html>
